MDScreen:

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "App"
            left_action_items: [["menu", lambda x: nav_drawer.set_state("toggle")]]
            
        MDBoxLayout:
            orientation: 'vertical'
            id: content

    MDNavigationDrawer:
        id: nav_drawer

        MDBoxLayout:
            orientation: "vertical"
            spacing: "8dp"
            padding: "8dp"

            MDLabel:
                text: "Menu"
                font_style: "H5"
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]

            ScrollView:
                MDList:
                    OneLineListItem:
                        text: "Home"
                        on_release:
                            app.menu_callback("home")
                    OneLineListItem:
                        text: "Ranking"
                        on_release:
                            app.menu_callback("ranking")
                    OneLineListItem:
                        text: "Statistics"
                        on_release:
                            app.menu_callback("statistics")
                    OneLineListItem:
                        text: "Predictions"
                        on_release:
                            app.menu_callback("predictions")
                    OneLineListItem:
                        text: "Reinforcement Activities"
                        on_release:
                            app.menu_callback("reinforcement_activities")

    ScreenManager:
        id: screen_manager

        HomeScreen:        
        RankingScreen:
        StatisticsScreen:
        PredictionsScreen:
        ReinforcementActivitiesScreen:

<HomeScreen>:
    name: "home"
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: "MoonKEY"
            left_action_items: [["menu", lambda x: app.root.ids.nav_drawer.set_state("toggle")]]
        MDLabel:
            text: "Home Page"
            halign: "center"

<RankingScreen>:
    name: "ranking"
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: "Ranking"
            left_action_items: [["menu", lambda x: app.root.ids.nav_drawer.set_state("toggle")]]
        MDLabel:
            text: "Ranking Page"
