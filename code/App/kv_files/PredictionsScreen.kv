<PredictionsScreen>:
    name: "predictions"
    elevation: 0
    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Predictions"
            left_action_items: [["menu", lambda x: app.root.ids.nav_drawer.set_state("toggle")]]

        # Espaciador para evitar que el contenido se solape con la sombra de la barra de herramientas
        Widget:
            size_hint_y: None
            height: "10dp"  # Ajusta la altura según el tamaño de la sombra

        MDLabel:
            elevation: 3
            text: "Prediccions d'Assignatures i Notes"
            halign: "center"
            font_style: "H6"
            size_hint_y: None
            height: self.texture_size[1] + dp(10)

        ScrollView:
            elevation: 3
            MDList:
                id: predictions_list
