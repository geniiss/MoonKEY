<StatisticsScreen>: 
    name: "statistics"
    MDBoxLayout:
        orientation: 'vertical'
        
        # Eliminem el MDTopAppBar si ja està definit a nivell superior
        
        AnchorLayout:
            anchor_y: 'top'  # Forcem que el contingut estigui a la part superior
            
            MDBoxLayout:
                padding: dp(50)
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(250)  # Ajusta aquesta alçada segons el que necessitis

                # Columna esquerra per a les labels de números
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.3
                    padding: dp(10)

                    MDLabel:
                        text: "Final Grade Avg:"
                        halign: "center"
                        font_style: "Body1"
                        size_hint_y: None
                        height: dp(30)
                    
                    MDLabel:
                        id: final_grade_avg
                        text: "0.0"  # Valor inicial que actualitzarem des del codi Python
                        halign: "center"
                        font_style: "H6"
                        size_hint_y: None
                        height: dp(50)
                    
                    MDLabel:
                        text: "Activity Grade Avg:"
                        halign: "center"
                        font_style: "Body1"
                        size_hint_y: None
                        height: dp(30)
                    
                    MDLabel:
                        id: activity_grade_avg
                        text: "0.0"  # Valor inicial que actualitzarem des del codi Python
                        halign: "center"
                        font_style: "H6"
                        size_hint_y: None
                        height: dp(50)
                
                # Columna dreta per a la gràfica
                MDBoxLayout:
                    id: chart_box
                    orientation: 'vertical'
                    size_hint_x: 0.7
                    padding: dp(10)
