<StatisticsScreen>: 
    name: "statistics"
    MDBoxLayout:
        orientation: 'vertical'

        # Espaciador para evitar que el contenido se solape con la sombra de la barra de herramientas
        Widget:
            size_hint_y: None
            height: "10dp"  # Ajusta la altura según el tamaño de la sombra

        AnchorLayout:
            anchor_y: 'top'
            
            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(250)

                # Columna esquerra per a les labels de números
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.3
                    padding: dp(10)

                    MDLabel:
                        text: "Final Grade Avg:"
                        halign: "center"
                        font_style: "Body1"
                        size_hint_y: None
                        height: dp(30)
                    
                    MDLabel:
                        id: final_grade_avg
                        text: "0.0"
                        halign: "center"
                        font_style: "H6"
                        size_hint_y: None
                        height: dp(50)
                    
                    MDLabel:
                        text: "Activity Grade Avg:"
                        halign: "center"
                        font_style: "Body1"
                        size_hint_y: None
                        height: dp(30)
                    
                    MDLabel:
                        id: activity_grade_avg
                        text: "0.0"
                        halign: "center"
                        font_style: "H6"
                        size_hint_y: None
                        height: dp(50)
                
                # Columna dreta per a la gràfica
                MDBoxLayout:
                    id: chart_box
                    orientation: 'vertical'
                    size_hint_x: 0.7
                    padding: dp(10)
        
        # Títol per a la llista d'assignatures (opcional)
        MDLabel:
            text: "Llista d'Assignatures"
            halign: "center"
            font_style: "H5"
            size_hint_y: None
            height: dp(40)

        # Llista scrollable d'assignatures a sota
        ScrollView:
            size_hint_y: None
            height: dp(375)
            MDList:
                id: subjects_list  # ID per accedir a la llista des del codi Python
