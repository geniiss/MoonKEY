<SubjectScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)
        
        # Centra els elements dins del BoxLayout
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(100)  # Ajusta l'alçada si és necessari per col·locar les fraccions correctament

            GridLayout:
                cols: 3
                row_default_height: dp(80)
                spacing: dp(10)

                BoxLayout:
                    orientation: 'vertical'
                    spacing: dp(5)

                    MDLabel:
                        text: "Examen Parcial"
                        halign: "center"
                        font_style: "Caption"
                    
                    MDLabel:
                        text: root.simple_number
                        halign: "center"
                        font_style: "H5"

                BoxLayout:
                    orientation: 'vertical'
                    spacing: dp(5)
                    
                    MDLabel:
                        text: "Examen Final"
                        halign: "center"
                        font_style: "Caption"
                    
                    MDLabel:
                        text: root.fraction1
                        halign: "center"
                        font_style: "H5"

                BoxLayout:
                    orientation: 'vertical'
                    spacing: dp(5)

                    MDLabel:
                        text: "Examen Recuperació"
                        halign: "center"
                        font_style: "Caption"
                    
                    MDLabel:
                        text: root.fraction2
                        halign: "center"
                        font_style: "H5"

        # Afegeix la imatge just sota del GridLayout
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(120)
            padding: dp(10)
            pos_hint: {"center_x": 0.5}

            Image:
                source: root.image_path
                size_hint: None, None
                size: dp(80), dp(80)
                pos_hint: {"center_x": 0.5}

        # Botó per tornar enrere
        MDRaisedButton:
            text: "Back"
            pos_hint: {"center_x": 0.5}
            on_release: root.go_back()
