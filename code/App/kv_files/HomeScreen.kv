<HomeScreen>:
    name: "home"
    
    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "MoonKEY"
            left_action_items: [["menu", lambda x: app.root.ids.nav_drawer.set_state("toggle")]]
        
        # Usa la propiedad image_source para establecer la fuente de la imagen
        FitImage:
            source: root.image_source  # Enlaza a la propiedad
            size_hint_y: None
            height: "300dp"  # Ajusta la altura seg√∫n necesites
        
        MDLabel:
            text: "Home Page"
            halign: "center"